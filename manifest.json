{
  "manifest_version": 2,
  "name": "Floating Input Box",
  "version": "1.0",
  "description": "Move input to a floating box",
  "permissions": ["activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_title": "Floating Input Box"
  }
}
